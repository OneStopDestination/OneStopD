<title>OneStopD</title>

<head>

</head>
<section style="background-color: cornflowerblue">
  <div class="logo">
    <%= image_tag("/assets/logo.png",  :class => "gravatar", :size => 150) %>
  </div>
  <div class="title">
    <h1><span style="font-size:1.1em">OneStopD</span></h1>
  </div>
  <div class="welcome">
    <h1><span style="font-size:0.5em">Welcome..</span></h1>
  </div>
  <% if !signed_in? %>
  <div class="login">
    <h1><span style="font-size:0.5em"><%= link_to "Sign in now!", signin_path , :class => "btn btn-large btn-primary" %></span></h1>
  </div>
  <% else %>
      <input type="text" id="post_user_name" placeholder="Search By politician" size="25" style="width:20%;margin-top: 18px" > </input>
      <div class="login">
        <h1><span style="font-size:0.5em"><%= link_to "Sign Out", signout_path , :class => "btn btn-large btn-primary" %></span></h1>
      </div>
  <% end  %>
</section>

<section>
  <div class="centre-page">
    <h2 style="text-align: center"> One platform for all your problems</h2>
  </div>
</section>

<% if signed_in? %>
    <div class="container">

      <div id="tabs">
        <ul>
          <li><a href="#tabs-1">Profiles of Politicians</a></li>
          <li><a href="#tabs-2">Problems Reported</a></li>

        </ul>
        <div id="tabs-1">
          <%= render :partial => 'profiles/index1' %>
        </div>
        <div id="tabs-2">
          two
        </div>

      </div>

    </div>


<% else %>
    <ul class="bxslider">
      <li><img src="/assets/1.jpg" /></li>
      <li><img src="/assets/2.jpg" /></li>
      <li><img src="/assets/3.jpg" /></li>
      <li><img src="/assets/4.jpg" /></li>
    </ul>
<% end %>

<div class="footer">
  <ul>
    <li><a href="#">Privacy</a></li>
    <li><a href="#">Terms of Use</a></li>
    <li><a href="#">Copyright</a></li>
  </ul>
</div>
  </div>
<script>
    $(document).ready(function(){
        $('.bxslider').bxSlider( {
            auto: true,
            autoControls: true,
            slideWidth:550
        });

        $('#tabs').click('tabsselect', function (event, ui) {
            var selectedTab = $("#tabs").tabs('option','active');

            if(selectedTab == 0) {
                $('#tabs-1').html('<%= escape_javascript(render(:partial => 'profiles/index1')).html_safe %>')
                $('#tabs-2').html(' ')

            }
            else {
                $('#tabs-2').html('<%= escape_javascript(render(:partial => 'problems/home_problems')).html_safe %>')
                $('#tabs-1').html(' ')
            }
        });

        $('#post_user_name').autocomplete({source: "/ajax/users"}).data("ui-autocomplete")._renderItem = function( ul, item ) {
            var inner_html = '<a href = ' + item.link +'><div class="list_item_container"><div class="label">' + item.label + '</div></div></a>';
            return $( "<li></li>" )
                    .data( "item.autocomplete", item )
                    .append(inner_html)
                    .appendTo( ul );
        };

    });

    $('#slider-next').click(function(){
        slider.goToNextSlide();
        return false;
    });
    $("#tabs").tabs({heightStyle: "content"});

</script>
