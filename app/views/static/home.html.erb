<title>OneStopD</title>
<section style="margin-top: 40px">
    <h2 style="text-align: center;font-style:oblique ; text-shadow: 2px 2px 2px #808080 ;font-family:Monospace,'Lucida Console'">Get to know about your politician <br>Report a problem in your constituency <br>Politician will resolve it <br>Leave your comments on the resolution <br>Discuss on current topics and participate in opinion polls </h2>
</section>

<% if signed_in? %>
    <div class="container">

      <div id="tabs">
        <ul>
          <li><a href="#tabs-1">Profiles of Politicians</a></li>
          <li><a href="#tabs-2">Problems Reported</a></li>
          <li><a href="#tabs-3">Opinions polls</a></li>

        </ul>
        <div id="tabs-1">
          <%= render :partial => 'profiles/index1' %>
        </div>
        <div id="tabs-2">
          two
        </div>
        <div id="tabs-3">
          three
        </div>

      </div>

    </div>


<% else %>
    <ul class="bxslider">
      <li><img src="/assets/home_1.jpg" /></li>
      <li><img src="/assets/home_2.jpg" /></li>
      <li><img src="/assets/home_3.jpg" /></li>

    </ul>
<% end %>


  </div>
<script>
    $(document).ready(function(){
        $("#tabs").tabs({heightStyle: "content"});
        $('#tabs ul li').click('tabsselect', function (event, ui) {
            var selectedTab = $("#tabs").tabs('option','active');

            if(selectedTab == 0) {
                $('#tabs-1').html('<%= escape_javascript(render(:partial => 'profiles/index1')).html_safe %>')
                $('#tabs-2').html(' ')
                $('#tabs-3').html(' ')
            }
            else if(selectedTab == 1) {
                $('#tabs-2').html('<%= escape_javascript(render(:partial => 'problems/home_problems')).html_safe %>')
                $('#tabs-1').html(' ')
                $('#tabs-3').html(' ')
            }
            else {
                $('#tabs-3').html('<%= escape_javascript(render(:partial => 'opinions/home_opinions')).html_safe %>')
                $('#tabs-1').html(' ')
                $('#tabs-2').html(' ')
            }
        });


    });
</script>
