<%= form_for(@problem , :remote => true) do |f| %>
  <% if @problem.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@problem.errors.count, "error") %> prohibited this problem from being saved:</h2>

      <ul>
      <% @problem.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   <div class="post_field" id="post_field">
    <p><%= f.text_area :description , :placeholder => "Compose new problem..." %> </p>
    <p>Choose the category<p>
    <%= f.select :category , options_for_select(["Transportation","Food","Medical","Water","Electricity","Cleanliness","Theft or other Security problems","Environment","General"],
                                          "gen"), {:multiple => false} %> </p>

    <%= f.hidden_field :cid, :value => @profile.constituency_id %>
    <%= f.hidden_field :user_id_posted, :value => current_user.id %>
    <div  style="width:71%">
       <%= f.submit "Report",:class => "btn btn-primary btn-large"  %>
    </div>

  </div>
<% end %>


